<%- include('../partials/header') %>

<tr>
  <td>
<section id="show-page">
  <div>name: </div>
  <div><%= artist.name %></div>
  <div>Birthday: </div>
  <div><%= artist.birthday %></div>
  <div>Genre: </div>
  <div><%= artist.genre %></div>
  <div>On Instagram: </div>
  <div><%= artist.onInstagram ? 'Yes' : 'Nope' %></div>
  <% if (user && user._id.equals(artist.user)) { %>
    <a href="/artists/<%= artist._id %>/edit">Edit artist</a>
  <% }%>
  </section>
</td>
</tr>

<br><br>
<h2>Reviews</h2>
<% if (user) { %>
<form action ="/artists/<%= artist._id %>/reviews" method="POST">
    <label>Review:</label>
    <textarea name="content"></textarea>

    <input type="submit" value="Add Review">
<% } %>
</form>
<% if (artist.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>

      </tr>
    </thead>
    <tbody>
      <% artist.reviews.forEach(function(a) { %>
        <tr>
          <td><%= a.content %></td>
          <td><%= a.createdAt.toLocaleDateString() %></td>
          <td>
            <% if (user && user._id.equals(artist.user)) { %>
              <form action="/reviews/<%= artist.id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / artist.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>





<%- include('../partials/footer') %>